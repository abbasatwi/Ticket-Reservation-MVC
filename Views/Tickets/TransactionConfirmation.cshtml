@{
    ViewData["Title"] = "Transaction Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
    else
    {
        <h1>Thank you for your order!</h1>
    }
</div>
