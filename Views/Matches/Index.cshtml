@model IEnumerable<project_new.Models.Match>

@{
    ViewData["Title"] = "Matches";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-3 mb-4">Matches</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus-circle"></i> Create New Match
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.MatchUrl)</th>
                <th>@Html.DisplayNameFor(model => model.MatchDate)</th>
                <th>@Html.DisplayNameFor(model => model.Category.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Stadium.Name)</th>
                <th>@Html.DisplayNameFor(model => model.HomeTeam.Name)</th>
                <th>@Html.DisplayNameFor(model => model.AwayTeam.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MatchUrl)</td>
                    <td>@Html.DisplayFor(modelItem => item.MatchDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Stadium.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.HomeTeam.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.AwayTeam.Name)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>