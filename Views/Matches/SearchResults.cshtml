@if (ViewBag.Message != null)
{
    <div class="alert alert-info" role="alert">
        @ViewBag.Message
    </div>
}

@if (ViewBag.Matches != null && ((List<project_new.Models.Match>)ViewBag.Matches).Any())
{
    <h3>Matches</h3>
    @foreach (var match in (List<project_new.Models.Match>)ViewBag.Matches)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Match: @match.HomeTeam.Name vs @match.AwayTeam.Name</h5>
                <p class="card-text">Date: @match.MatchDate.ToString()</p>
                <p class="card-text">Location: @match.Stadium.Location</p>
                <p class="card-text">Stadium: @match.Stadium.Name</p>
                <a href="@Url.Action("MatchDetails", "Matches", new { matchId = match.Id })" class="btn btn-success">View Tickets</a>
            </div>
        </div>
    }
}

@if (ViewBag.Teams != null && ((List<project_new.Models.Team>)ViewBag.Teams).Any())
{
    <h3>Teams</h3>
    @foreach (var team in (List<project_new.Models.Team>)ViewBag.Teams)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@team.Name</h5>
            </div>
        </div>
    }
}

@if (ViewBag.Stadiums != null && ((List<project_new.Models.Stadium>)ViewBag.Stadiums).Any())
{
    <h3>Stadiums</h3>
    @foreach (var stadium in (List<project_new.Models.Stadium>)ViewBag.Stadiums)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@stadium.Name</h5>
                <p class="card-text">Location: @stadium.Location</p>
            </div>
        </div>
    }
}