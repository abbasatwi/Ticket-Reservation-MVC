@model List<project_new.Models.Match>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info" role="alert">
        No matches found. Please try again with a different search term.
    </div>
}
else
{
    @foreach (var match in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Match: @match.HomeTeam.Name vs @match.AwayTeam.Name</h5>
                <p class="card-text">Date: @match.MatchDate.ToString()</p>
                <p class="card-text">Location: @match.Stadium.Location</p>
                <p class="card-text">Stadium: @match.Stadium.Name</p>
                <a href="@Url.Action("MatchDetails", "Matches", new { matchId = match.Id })" class="btn btn-success">View Tickets</a>
            </div>
        </div>
    }
}
