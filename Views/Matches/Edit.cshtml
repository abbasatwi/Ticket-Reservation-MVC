@model project_new.Models.Match

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- Add enctype="multipart/form-data" to the form to support file uploads -->
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HomeTeam" class="control-label"></label>
                <select asp-for="HomeTeamId" class="form-control" asp-items="ViewBag.HomeTeamId"></select>
                <span asp-validation-for="HomeTeamId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AwayTeam" class="control-label"></label>
                <select asp-for="AwayTeamId" class="form-control" asp-items="ViewBag.AwayTeamId"></select>
                <span asp-validation-for="AwayTeamId" class="text-danger"></span>
            </div>

            <!-- Use asp-for to bind the file input to the model -->
            <div class="form-group">
                <label asp-for="MatchUrl" class="control-label"></label>
                <input asp-for="MatchUrl" type="file" class="form-control" />
                <span asp-validation-for="MatchUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MatchDate" class="control-label"></label>
                <input asp-for="MatchDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="MatchDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Stadium" class="control-label"></label>
                <select asp-for="StadiumId" class="form-control" asp-items="ViewBag.StadiumId"></select>
                <span asp-validation-for="StadiumId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
